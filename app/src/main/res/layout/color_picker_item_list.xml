<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:id="@+id/color_picker_view"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:background="@color/white"
        tools:text="" />

    <View
        android:id="@+id/color_picker_view2"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/color_picker_view"
        android:background="@color/white"
        tools:text="" />

    <View
        android:id="@+id/color_picker_view3"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/color_picker_view2"
        android:background="@color/white"
        tools:text="" />

    <View
        android:id="@+id/color_picker_view4"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/color_picker_view3"
        android:background="@color/white"
        tools:text="" />

    <View
        android:id="@+id/color_picker_view5"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/color_picker_view4"
        android:background="@color/white"
        tools:text="" />

    <View
        android:id="@+id/color_picker_view6"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/color_picker_view5"
        android:background="@color/white"
        tools:text="" />

</RelativeLayout>